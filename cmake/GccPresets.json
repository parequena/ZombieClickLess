{
   "version": 5,
   "include": [
      "CommonPresets.json"
   ],
   "configurePresets": [
      {
         "name": "gcc-cfg",
         "hidden": true,
         "inherits": "common-cfg",
         "cacheVariables": {
            "CMAKE_CXX_COMPILER": "g++",
            "CXX_WARNING_FLAGS": "-Wall;-Wextra;-Wno-c++98-compat;-Wno-pre-c++17-compat;-Wno-c++98-compat-pedantic;-Wno-c++20-compat;-Wno-padded",
            "CXX_SANITIZERS_FLAGS": "-fsanitize=address,undefined;-fno-omit-frame-pointer"
         }
      }
   ]
}
